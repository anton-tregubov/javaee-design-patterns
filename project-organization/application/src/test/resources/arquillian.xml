<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://jboss.org/schema/arquillian"
            xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <extension qualifier="webdriver">
        <property name="browser">chromeheadless</property>
        <!--<property name="browser">chrome</property>-->

        <property name="dimensions">1600x1000</property>
        <property name="acceptSslCerts">true</property>
        <property name="webStorageEnabled">true</property>
        <property name="reuseCookies">false</property>
        <property name="loggingPrefs">driver=WARNING</property>
    </extension>

    <extension qualifier="screenshooter">
        <property name="takeOnEveryAction">true</property>
        <property name="takeWhenTestFailed">false</property>
        <property name="takeBeforeTest ">true</property>
        <property name="takeAfterTest">true</property>
    </extension>

    <extension qualifier="reporter">
        <property name="report">html5</property>
        <property name="reportAfterEvery">method</property>
    </extension>
</arquillian>